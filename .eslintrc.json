{
    "extends": ["airbnb-base", "plugin:import/errors", "plugin:import/warnings", "plugin:prettier/recommended", "prettier"],
    "plugins": ["import", "prettier"],
    "rules": {
        "linebreak-style": "off",
        "import/extensions": ["error", "always", {
            "ignorePackages": true
        }],
        "no-unused-vars": "warn",
        "no-restricted-syntax": "off",
        "no-console": ["warn", {
            "allow": ["warn", "error"]
        }],
        "max-classes-per-file": ["error", 5]
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack.common.js"
            }
        }
    },
    "env": {
        "browser": true,
        "es6": true
    }
}
